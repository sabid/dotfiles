#!/usr/bin/env bash

source ~/dotfiles/.zshrc

# Mysql
# Note: requires ~/.my.cnf
# Ex:
# [client]
# user = root
# password = XXXXXXXX
function db {
    if [ "$1" = "refresh" ]; then
        mysql -e "drop database $2; create database $2"
    elif [ "$1" = "create" ]; then
        mysql -e "create database $2"
    elif [ "$1" = "drop" ]; then
        mysql -e "drop database $2"
    fi
}
